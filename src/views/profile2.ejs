<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header3') %>

    <section class="user-dashboard">
      <!-- IZQUIERDA: PERFIL -->
      <aside class="profile-panel">
        <div class="profile-card">
          <div class="avatar">
            <img src="/img/users/default.png" alt="Foto de perfil" />
          </div>

          <div class="profile-body">
            <h2 class="name">Juan Pérez</h2>
            <p class="role">Inquilino</p>

            <div class="profile-info">
              <p><strong>Email:</strong> juanperez@mail.com</p>
              <p><strong>Teléfono:</strong> 123456789</p>
              <p><strong>Provincia:</strong> Córdoba</p>
              <p><strong>Localidad:</strong> Nueva Córdoba</p>
              <p><strong>Dirección:</strong> Calle Falsa 123</p>
            </div>

            <a class="btn edit" href="#">Editar perfil</a>
          </div>
        </div>
      </aside>

      <!-- DERECHA: PANEL CON TABS -->
      <main class="rentals-panel">
        <header class="panel-header" role="tablist" aria-label="Secciones de cuenta">
          <button class="tab" role="tab" aria-selected="false" data-tab="contratos">Contratos</button>
          <button class="tab active" role="tab" aria-selected="true" data-tab="pagos">Pagos</button>
        </header>

        <!-- CONTRATOS -->
        <section class="tab-panel" data-panel="contratos" hidden>
          <div class="table-wrap">
            <table class="table">
              <thead>
                <tr>
                  <th>Propiedad</th>
                  <th>Dirección</th>
                  <th>Inicio</th>
                  <th>Fin</th>
                  <th>Monto</th>
                  <th>Estado</th>
                  <th class="text-right">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Estilo cálido</td>
                  <td>Av. Siempreviva 742</td>
                  <td>01/03/2025</td>
                  <td>31/01/2026</td>
                  <td>$ 320.000</td>
                  <td><span class="chip chip-ok">Activo</span></td>
                  <td class="text-right actions">
                    <a class="btn ghost" href="#">Ver PDF</a>
                  </td>
                </tr>
                <tr>
                  <td>Loft moderno</td>
                  <td>Calle Arte 120</td>
                  <td>01/03/2024</td>
                  <td>28/02/2025</td>
                  <td>$ 180.000</td>
                  <td><span class="chip">Finalizado</span></td>
                  <td class="text-right actions">
                    <a class="btn ghost" href="#">Ver PDF</a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>

        <!-- PAGOS (por defecto visible) -->
        <section class="tab-panel" data-panel="pagos">
          <div class="table-wrap">
            <table class="table">
              <thead>
                <tr>
                  <th>Fecha</th>
                  <th>Propiedad</th>
                  <th>Mes</th>
                  <th>Año</th>
                  <th>Monto</th>
                  <th>Estado</th>
                  <th class="text-right">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>10/07/2025</td>
                  <td>Estilo cálido</td>
                  <td>Julio</td>
                  <td>2025</td>
                  <td>$ 320.000</td>
                  <td><span class="chip chip-ok">Pagado</span></td>
                  <td class="text-right actions">
                    <a class="btn ghost" href="#">Comprobante</a>
                  </td>
                </tr>
                <tr>
                  <td>15/07/2025</td>
                  <td>Departamento céntrico</td>
                  <td>Julio</td>
                  <td>2025</td>
                  <td>$ 210.000</td>
                  <td><span class="chip chip-warn">Pendiente</span></td>
                  <td class="text-right actions">
                    <button type="button" class="btn pay">Pagar</button>
                    <a class="btn ghost" href="#">Comprobante</a>
                  </td>
                </tr>
                <tr>
                  <td>02/08/2025</td>
                  <td>Loft moderno</td>
                  <td>Agosto</td>
                  <td>2025</td>
                  <td>$ 180.000</td>
                  <td><span class="chip chip-bad">Atrasado</span></td>
                  <td class="text-right actions">
                    <button type="button" class="btn pay">Pagar</button>
                    <a class="btn ghost" href="#">Comprobante</a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>
      </main>
    </section>

    <script src="/js/profile.js"></script>
  </body>
</html>
