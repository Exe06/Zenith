<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

<body>
  <div class="wrap">
    <div class="header">
      <div class="brand"><i class="fa-solid fa-building"></i> Panel de Administración</div>
      <div class="tabs">
        <button class="tab active" data-tab="usuarios"><i class="fa-solid fa-users"></i>&nbsp;Usuarios</button>
        <button class="tab" data-tab="inmuebles"><i class="fa-solid fa-house-chimney"></i>&nbsp;Inmuebles</button>
        <button class="btn-logout" onclick="cerrarSesion()"><i class="fa-solid fa-right-from-bracket"></i>&nbsp;Cerrar sesión</button>
      </div>
    </div>

    <div class="panel">
      <div class="panel-header">
        <div class="search">
          <i class="fa-solid fa-magnifying-glass" style="color:#6b7aa6"></i>
          <input id="search" type="search" placeholder="Buscar por nombre, email, ciudad, título…" />
        </div>
        <div class="actions">
          <button id="btn-new" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nuevo</button>
          <button id="btn-export" class="btn btn-ghost"><i class="fa-solid fa-file-arrow-down"></i> Exportar</button>
        </div>
      </div>

      <div class="table-wrap">
        <!-- Tabla Usuarios -->
        <table id="table-usuarios">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Email</th>
              <th>Rol</th>
              <th>Estado</th>
              <th style="width:220px">Acciones</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>

        <!-- Tabla Inmuebles -->
        <table id="table-inmuebles" style="display:none">
          <thead>
            <tr>
              <th>Título</th>
              <th>Tipo</th>
              <th>Ciudad</th>
              <th>Monto base</th>
              <th>Estado</th>
              <th style="width:220px">Acciones</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Modal Genérico -->
  <div class="modal-backdrop" id="backdrop">
    <div class="modal" role="dialog" aria-modal="true">
      <header id="modal-title">Nuevo</header>
      <div class="body" id="modal-body"></div>
      <footer>
        <button class="btn btn-outline" id="btn-cancelar">Cancelar</button>
        <button class="btn btn-primary" id="btn-guardar">Guardar</button>
      </footer>
    </div>
  </div>

  <script src="/js/admin.js"></script>
</body>
</html>
