<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %>

<body>
  <!-- NAVBAR -->
  <%- include('partials/header1') %>

  <!-- FILTROS -->
  <section class="filters-wrap">
    <div class="filters" id="filters">

      <div class="filter" style="grid-column:span 2">
        <label for="fTipo">Tipo</label>
        <select id="fTipo">
          <option value="">Todos</option>
          <option value="casa">Casa</option>
          <option value="departamento">Departamento</option>
          <option value="monoambiente">Monoambiente</option>
        </select>
      </div>

      <div class="filter" style="grid-column:span 2">
        <label for="fOperacion">Operación</label>
        <select id="fOperacion">
          <option value="">Cualquiera</option>
          <option value="mensual">Largo Plazo</option>
          <option value="temporario">Temporal</option>
        </select>
      </div>

      <div class="filter" style="grid-column:span 2">
        <label for="fGarantia">Garantía</label>
        <select id="fGarantia">
          <option value="">Cualquiera</option>
          <option value="propietario">Propietario</option>
          <option value="seguro_caucion">Seguro de caución</option>
          <option value="recibo_sueldo">Aval Bancario</option>
        </select>
      </div>

      <div class="filter" style="grid-column:span 2">
        <label for="fPrecio">Precio máx.</label>
        <select id="fPrecio">
          <option value="">Sin tope</option>
          <option value="150000">Hasta $150.000</option>
          <option value="250000">Hasta $250.000</option>
          <option value="350000">Hasta $350.000</option>
          <option value="500000">Hasta $500.000</option>
        </select>
      </div>

      <div class="filter" style="grid-column:span 1">
        <label for="fAmb">Ambientes (mín.)</label>
        <select id="fAmb">
          <option value="">—</option><option>1</option><option>2</option><option>3</option><option>4</option>
        </select>
      </div>

      <div class="filter" style="grid-column:span 1">
        <label for="fDorm">Dorm. (mín.)</label>
        <select id="fDorm">
          <option value="">—</option><option>1</option><option>2</option><option>3</option>
        </select>
      </div>

      <div class="filter" style="grid-column:span 6">
        <div class="checkline">
          <label><input type="checkbox" id="fMascotas"> Mascotas</label>
          <label><input type="checkbox" id="fCochera"> Cochera</label>
          <label><input type="checkbox" id="fBalcon"> Balcón</label>
          <!-- servicios básicos -->
          <label><input type="checkbox" class="srv" value="internet"> Internet</label>
          <label><input type="checkbox" class="srv" value="gas"> Gas</label>
          <label><input type="checkbox" class="srv" value="luz"> Luz</label>
          <label><input type="checkbox" class="srv" value="agua"> Agua</label>
        </div>
      </div>

      <div class="searchbox" id="searchbox">
        <button class="icon-btn" id="btnSearch" aria-label="Buscar">
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path d="M21 21l-4.35-4.35m1.1-4.4a7.5 7.5 0 11-15 0 7.5 7.5 0 0115 0z"
                  fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </button>
        <input id="q" type="search" placeholder="Buscar por título o descripción…"/>
      </div>
    </div>
  </section>

  <!-- CONTENIDO -->
  <main class="container">
    <h1 class="title">Propiedades Disponibles</h1>

    <section id="grid" class="grid">
      <!-- 8 TARJETAS DE EJEMPLO -->
      <!-- data-servicios es lista separada por coma -->
      <article class="prop-card card-propiedad"
        data-ubicacion="Centro" data-tipo="departamento" data-operacion="mensual"
        data-precio="280000" data-ambientes="2" data-dormitorios="1"
        data-mascotas="no" data-cochera="no" data-balcon="si"
        data-garantia="seguro_caucion" data-servicios="agua,luz,gas,internet">
        <div class="img"><img src="/img/properties/property4.avif" alt=""></div>
        <div class="body">
          <h3>Pequeño moderno</h3>
          <p class="muted">Minimalista, eficiente y luminoso.</p>
          <div class="meta">
            <span class="chip">Centro</span><span class="chip">2 amb</span><span class="chip">Balcón</span>
          </div>
        </div>
        <div class="card-actions">
          <span class="price">$280.000</span>
          <a class="btn btn-primary" href="/property/1">Ver propiedad</a>
        </div>
      </article>

      <article class="prop-card card-propiedad"
        data-ubicacion="Norte" data-tipo="casa" data-operacion="mensual"
