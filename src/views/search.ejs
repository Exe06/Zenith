          <div class="meta"><span class="chip">Balcón</span><span class="chip">Mascotas</span></div>
        </div>
        <div class="card-actions">
          <span class="price">$260.000</span>
          <a class="btn btn-primary" href="/property/1">Ver propiedad</a>
        </div>
      </article>

      <article class="prop-card card-propiedad"
        data-ubicacion="Centro" data-tipo="Monoambiente" data-operacion="temporario"
        data-precio="150000" data-ambientes="1" data-dormitorios="0"
