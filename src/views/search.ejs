        </div>
      </article>

      <article class="prop-card card-propiedad"
        data-ubicacion="Oeste" data-tipo="departamento" data-operacion="mensual"
        data-precio="190000" data-ambientes="2" data-dormitorios="1"
        data-mascotas="no" data-cochera="no" data-balcon="no"
        data-garantia="seguro_caucion" data-servicios="agua,luz">
